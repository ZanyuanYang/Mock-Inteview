page {
  background: #EFF3FC;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.search_background {
  width: 100%;
  height: 250px;
  left: 0px;
  background: rgba(41, 126, 255, 0.5);
  border-radius: 0px 0px 22px 22px;
}
.search_background .title {
  padding-top: 45px;
  font-size: 24px;
  font-weight: 600;
  text-align: center;
}
.search_background .search_wrap {
  display: flex;
  margin-top: 30px;
  justify-content: center;
  align-items: center;
}
.search_background .search_wrap .search {
  display: flex;
  width: 75%;
  height: 38px;
  background: #FFFFFF;
  border-radius: 10px;
  align-items: center;
  text-align: center;
}
.search_background .search_wrap .search .search_icon {
  width: 21px;
  height: 21px;
  margin-left: 10px;
}
.search_background .search_wrap .search .search_text {
  margin-left: 8px;
  font-size: 16px;
  letter-spacing: -0.408px;
  color: #7A7D84;
  font-weight: 400;
}
.search_background .search_wrap .filter {
  width: 38px;
  height: 38px;
  background: #fff;
  border-radius: 10px;
  margin-left: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: 1px solid #277EFF;
}
.search_background .search_wrap .filter .search_icon {
  width: 21px;
  height: 21px;
}
.mentor_wrapper {
  position: absolute;
  left: 0;
  right: 0;
  top: 25%;
  margin-left: auto;
  margin-right: auto;
}
.mentor_wrapper .mentor_item {
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;
  width: 80%;
  height: 100px;
  padding: 10px 5% 10px 5%;
  background: #FAFAFC;
  box-shadow: 0px 4px 20px rgba(0, 64, 221, 0.2);
  border-radius: 16px;
}
.mentor_wrapper .mentor_item .mentor_title {
  font-size: 18px;
}
